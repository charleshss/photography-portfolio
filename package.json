{
  "name": "sam-photography-portfolio",
  "version": "1.0.0",
  "description": "Photography portfolio with Next.js frontend and Sanity CMS",
  "private": true,
  "scripts": {
    "dev": "npm run dev --prefix website",
    "build": "npm run build --prefix website",
    "start": "npm run start --prefix website",
    "studio:dev": "npm run dev --prefix studio",
    "studio:build": "npm run build --prefix studio",
    "studio:deploy": "npm run deploy --prefix studio",
    "install:all": "npm install --prefix website && npm install --prefix studio",
    "build:all": "npm run build --prefix website && npm run build --prefix studio",
    "clean": "rm -rf website/node_modules studio/node_modules website/.next studio/dist",
    "format": "prettier --write \"website/**/*.{js,jsx,ts,tsx,json,md}\" \"studio/**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "workspaces": [
    "website",
    "studio"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/charleshss/photography-portfolio"
  },
  "author": "Charles Suddens-Spiers",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.5.0"
  }
}